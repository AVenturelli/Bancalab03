<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".conta"
        android:background="@android:color/white" android:id="@+id/sfondo">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.791"
            android:textAppearance="@style/TextAppearance.Compat.Notification" android:textSize="24sp"
            android:id="@+id/testo1" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:textStyle="bold|italic" android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="50dp"/>
    <Switch
            android:text="GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" android:checked="false"
            android:textOn="On" android:textOff="Off"
            tools:text="red" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="70dp" android:layout_marginStart="70dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="182dp" app:layout_constraintEnd_toStartOf="@+id/switch2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="383dp"/>
    <Switch
            android:text="NETWORK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:layout_marginBottom="310dp"
            app:layout_constraintBottom_toTopOf="@+id/web" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="182dp" android:layout_marginLeft="120dp" android:layout_marginStart="120dp"
            app:layout_constraintStart_toEndOf="@+id/switch1" android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.45999998"/>
    <Button
            android:text="Apri la mappa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/web" android:layout_marginTop="75dp" app:layout_constraintTop_toBottomOf="@+id/testo1"
            android:layout_marginEnd="127dp" android:layout_marginRight="127dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp"/>

</android.support.constraint.ConstraintLayout>