<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".conta"
        android:background="@android:color/white" android:id="@+id/sfondo">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.791"
            android:textAppearance="@style/TextAppearance.Compat.Notification" android:textSize="24sp"
            android:id="@+id/testo1" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:textStyle="bold|italic" android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="50dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="312dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/foto" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Switch
            android:text="GPS"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:id="@+id/switch1" android:checked="false"
            app:layout_constraintTop_toBottomOf="@+id/foto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textOn="On" android:textOff="Off" app:layout_constraintHorizontal_bias="0.134"
            android:layout_marginTop="24dp"/>
    <Switch
            android:text="NETWORK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2" android:layout_marginLeft="95dp" android:layout_marginStart="95dp"
            app:layout_constraintStart_toEndOf="@+id/switch1"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/foto" app:layout_constraintHorizontal_bias="0.4"/>
    <Button
            android:text="Apri la mappa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/web" android:layout_marginTop="75dp" app:layout_constraintTop_toBottomOf="@+id/testo1"
            android:layout_marginEnd="127dp" android:layout_marginRight="127dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp"/>

</android.support.constraint.ConstraintLayout>